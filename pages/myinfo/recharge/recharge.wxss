page{ 
 height: 100%; 
 background-color: #272727;
} 

.recharge-title{
  display: flex;
  display: -webkit-flex;
  flex-direction:column ;
  height: 100rpx;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #3B3B3B;
}


.goods-list{
  display: flex;
  display: -webkit-flex;
  flex-direction:row ;
  justify-content: space-between;
  flex-wrap:wrap;
  padding-top: 3px;
}

.good{
  display: flex;
  display: -webkit-flex;
  flex-direction:column ;
  justify-content: space-between;
  align-items: center;
  padding: 7px 3px 7px 3px;
  width: 85px;
  height: 100px;
}

.good image{
  width: 50px;
  height: 50px;

}

.recharge-checkbox{
  padding:5px;
}

.pay-bt{
  width: 80%;
  margin-top: 5px;
}

