.myinfo{
  height: 95%;
  background-color: #272727;
  display: flex;
  display: -webkit-flex;
  flex-direction:column ;
  justify-content:flex-start;

}



.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  
}

.user-info{
  display: flex;
  display: -webkit-flex;
  flex-direction:row ;
  justify-content:flex-start;
  align-items:center;
  border-bottom: 1rpx solid #3B3B3B;
  padding: 20rpx 20rpx 20rpx 60rpx;
}

.user-info-total{
  display: flex;
  display: -webkit-flex;
  flex-direction:column ;
  height: 50px;
  justify-content: space-between;
  padding-left: 50rpx;
}

.user-info-item:first{
  border-top: 1rpx solid #3B3B3B;
}
.user-info-item{
  height: 60rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:space-between;
  padding: 20rpx 20rpx 20rpx 60rpx;
  align-items:center;
  border-bottom: 1rpx solid #3B3B3B;
}

.user-info-item-half{
  width: 50%;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  align-items: center;
}

.user-info-item-image{
  width: 30rpx;
  height: 30rpx;
}